import React, { useState, useRef, useEffect } from 'react';
import { Play, Pause, Volume2, Trash2, Plus, Settings, Radio, X, Save, Music, RefreshCw, Lock } from 'lucide-react';

// Note: Real world mein yeh keys environment variables mein honi chahiye.
// Abhi ke liye yeh "Mock Data" mode mein chalega jab tak aap Firebase setup nahi karte.
const MOCK_MODE = true; 

const RadioAdminApp = () => {
  // --- STATE MANAGEMENT ---
  const [stations, setStations] = useState([
    { id: '1', name: 'Chill Lofi', url: 'https://stream.zeno.fm/0r0xa792kwzuv', genre: 'Lo-Fi', freq: '98.5' },
    { id: '2', name: 'Desi Hits', url: 'https://stream.zeno.fm/fn18m792kwzuv', genre: 'Bollywood', freq: '102.0' }
  ]);
  
  const [currentStation, setCurrentStation] = useState(null);
  const [isPlaying, setIsPlaying] = useState(false);
  const [isAdmin, setIsAdmin] = useState(false); // Toggle Admin Mode
  const [showAdminLogin, setShowAdminLogin] = useState(false);
  const [adminPass, setAdminPass] = useState('');

  // Form State for New Station
  const [newStation, setNewStation] = useState({ name: '', url: '', genre: '', freq: '' });

  const audioRef = useRef(null);

  // --- EFFECT: Initialize First Station ---
  useEffect(() => {
    if (stations.length > 0 && !currentStation) {
      setCurrentStation(stations[0]);
    }
  }, [stations]);

  // --- AUDIO HANDLERS ---
  const togglePlay = () => {
    if (!currentStation) return;
    if (isPlaying) {
      audioRef.current.pause();
    } else {
      audioRef.current.play().catch(e => alert("Stream error or offline"));
    }
    setIsPlaying(!isPlaying);
  };

  const playStation = (station) => {
    setCurrentStation(station);
    setIsPlaying(true);
    // Timeout to allow state update before playing
    setTimeout(() => {
        if(audioRef.current) {
            audioRef.current.src = station.url;
            audioRef.current.play();
        }
    }, 100);
  };

  // --- ADMIN FUNCTIONS (MOCK + REAL LOGIC EXPLAINED) ---
  
  const handleLogin = () => {
    if (adminPass === 'admin123') { // Simple password
      setIsAdmin(true);
      setShowAdminLogin(false);
    } else {
      alert("Wrong Password!");
    }
  };

  const handleAddStation = () => {
    if (!newStation.name || !newStation.url) return alert("Name and URL required");

    const newEntry = { ...newStation, id: Date.now().toString() };
    
    // AGAR FIREBASE HOTA TOH:
    // await addDoc(collection(db, "stations"), newEntry);
    
    // LOCAL DEMO UPDATE:
    setStations([...stations, newEntry]);
    setNewStation({ name: '', url: '', genre: '', freq: '' }); // Reset form
    alert("Station Added! Users will see this instantly.");
  };

  const handleDelete = (id) => {
    if(!window.confirm("Delete this station?")) return;

    // AGAR FIREBASE HOTA TOH:
    // await deleteDoc(doc(db, "stations", id));

    // LOCAL DEMO UPDATE:
    setStations(stations.filter(s => s.id !== id));
    if (currentStation?.id === id) {
        setIsPlaying(false);
        audioRef.current.pause();
        setCurrentStation(null);
    }
  };

  // --- RENDER ---
  return (
    <div className="flex flex-col h-screen bg-gray-900 text-white font-sans">
      <audio ref={audioRef} />

      {/* HEADER */}
      <div className="flex justify-between items-center p-4 bg-gray-800 shadow-md">
        <div className="flex items-center gap-2">
          <div className="bg-pink-600 p-2 rounded-lg">
            <Radio size={20} />
          </div>
          <h1 className="font-bold text-xl tracking-wider">CLOUD<span className="text-pink-500">FM</span></h1>
        </div>
        
        {/* Secret Admin Button */}
        <button 
          onClick={() => isAdmin ? setIsAdmin(false) : setShowAdminLogin(true)}
          className={`p-2 rounded-full transition ${isAdmin ? 'bg-red-500 hover:bg-red-600' : 'bg-gray-700 hover:bg-gray-600'}`}
        >
          {isAdmin ? <X size={20} /> : <Settings size={20} />}
        </button>
      </div>

      {/* MAIN CONTENT AREA */}
      <div className="flex-1 overflow-y-auto relative">
        
        {/* --- ADMIN LOGIN MODAL --- */}
        {showAdminLogin && (
          <div className="absolute inset-0 bg-black/80 z-50 flex items-center justify-center p-4">
            <div className="bg-gray-800 p-6 rounded-2xl w-full max-w-sm border border-gray-700">
              <h3 className="text-xl font-bold mb-4 flex items-center gap-2"><Lock size={18} className="text-pink-500"/> Admin Access</h3>
              <input 
                type="password" 
                placeholder="Enter Password (admin123)"
                className="w-full p-3 bg-gray-900 rounded-lg border border-gray-600 mb-4 focus:border-pink-500 outline-none"
                value={adminPass}
                onChange={(e) => setAdminPass(e.target.value)}
              />
              <div className="flex gap-2">
                <button onClick={() => setShowAdminLogin(false)} className="flex-1 py-2 bg-gray-700 rounded-lg">Cancel</button>
                <button onClick={handleLogin} className="flex-1 py-2 bg-pink-600 rounded-lg font-semibold">Login</button>
              </div>
            </div>
          </div>
        )}

        {/* --- ADMIN PANEL VIEW --- */}
        {isAdmin ? (
          <div className="p-4 space-y-6">
            <div className="bg-gray-800 p-5 rounded-xl border border-gray-700">
              <h2 className="text-lg font-bold mb-4 text-pink-400 flex items-center gap-2">
                <Plus size={18} /> Add New Station
              </h2>
              <div className="space-y-3">
                <input 
                  className="w-full p-3 bg-gray-900 rounded-lg border border-gray-600" 
                  placeholder="Station Name (e.g. Radio Mirchi)" 
                  value={newStation.name} onChange={e => setNewStation({...newStation, name: e.target.value})}
                />
                <input 
                  className="w-full p-3 bg-gray-900 rounded-lg border border-gray-600" 
                  placeholder="Stream URL (https://...mp3)" 
                  value={newStation.url} onChange={e => setNewStation({...newStation, url: e.target.value})}
                />
                <div className="flex gap-2">
                  <input 
                    className="flex-1 p-3 bg-gray-900 rounded-lg border border-gray-600" 
                    placeholder="Frequency (98.3)" 
                    value={newStation.freq} onChange={e => setNewStation({...newStation, freq: e.target.value})}
                  />
                  <input 
                    className="flex-1 p-3 bg-gray-900 rounded-lg border border-gray-600" 
                    placeholder="Genre (Pop)" 
                    value={newStation.genre} onChange={e => setNewStation({...newStation, genre: e.target.value})}
                  />
                </div>
                <button onClick={handleAddStation} className="w-full py-3 bg-green-600 hover:bg-green-500 rounded-lg font-bold flex justify-center items-center gap-2">
                  <Save size={18} /> Save Station
                </button>
              </div>
            </div>

            <div className="space-y-2">
              <h3 className="text-sm text-gray-400 uppercase tracking-wider">Manage Existing Stations</h3>
              {stations.map(station => (
                <div key={station.id} className="flex justify-between items-center bg-gray-800 p-3 rounded-lg border border-gray-700">
                  <div>
                    <div className="font-bold">{station.name}</div>
                    <div className="text-xs text-gray-400 truncate max-w-[200px]">{station.url}</div>
                  </div>
                  <button onClick={() => handleDelete(station.id)} className="p-2 bg-red-500/20 text-red-500 rounded-lg hover:bg-red-500 hover:text-white">
                    <Trash2 size={18} />
                  </button>
                </div>
              ))}
            </div>
          </div>
        ) : (
          /* --- NORMAL USER VIEW (STATION LIST) --- */
          <div className="p-4 space-y-3 pb-32">
            {stations.map((station) => (
              <div 
                key={station.id}
                onClick={() => playStation(station)}
                className={`flex items-center p-4 rounded-xl cursor-pointer transition-all border ${
                  currentStation?.id === station.id 
                    ? 'bg-pink-900/20 border-pink-500/50' 
                    : 'bg-gray-800 border-transparent hover:bg-gray-750'
                }`}
              >
                <div className={`w-12 h-12 rounded-full flex items-center justify-center mr-4 ${
                  currentStation?.id === station.id ? 'bg-pink-500 text-white' : 'bg-gray-700 text-gray-400'
                }`}>
                  {currentStation?.id === station.id && isPlaying ? <Music size={20} className="animate-pulse"/> : <Radio size={20}/>}
                </div>
                <div className="flex-1">
                  <h3 className={`font-bold ${currentStation?.id === station.id ? 'text-pink-400' : 'text-white'}`}>
                    {station.name}
                  </h3>
                  <p className="text-xs text-gray-400">{station.freq} â€¢ {station.genre}</p>
                </div>
                {currentStation?.id === station.id && (
                   <div className="text-pink-500 text-xs font-bold tracking-widest">PLAYING</div>
                )}
              </div>
            ))}
            
            {stations.length === 0 && (
                <div className="text-center text-gray-500 mt-10">
                    <RefreshCw size={40} className="mx-auto mb-2 opacity-50"/>
                    <p>No stations found.</p>
                    <p className="text-sm">Login as Admin to add one.</p>
                </div>
            )}
          </div>
        )}
      </div>

      {/* PLAYER FOOTER (Fixed Bottom) */}
      {!isAdmin && currentStation && (
        <div className="bg-gray-800 border-t border-gray-700 p-4 pb-6 shadow-2xl z-20">
            <div className="flex items-center justify-between max-w-md mx-auto">
                <div className="flex flex-col">
                    <span className="text-pink-400 text-xs font-bold tracking-wider">NOW PLAYING</span>
                    <span className="font-bold text-lg">{currentStation.name}</span>
                </div>
                
                <button 
                    onClick={togglePlay}
                    className="w-14 h-14 rounded-full bg-pink-600 hover:bg-pink-500 flex items-center justify-center shadow-lg shadow-pink-600/30 transition transform active:scale-95"
                >
                    {isPlaying ? <Pause size={24} fill="white" /> : <Play size={24} fill="white" className="ml-1"/>}
                </button>
            </div>
        </div>
      )}
    </div>
  );
};

export default RadioAdminApp;
